<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="stylePrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|left</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

    <style name="styleSecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

</resources>
